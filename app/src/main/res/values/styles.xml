<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">

        <!-- Customize your theme here. -->
    </style>
    <style name="ActionBarTheme"
        parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/BaseActionBar</item>
        <item name="android:logo">@drawable/orkut</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/BaseActionBar</item>
    </style>

    <!-- general styles for the action bar -->
    <style name="BaseActionBar"
        parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
        <item name="android:background">@drawable/hpr</item>
        <item name="android:backgroundStacked">@drawable/hpr</item>
        <item name="android:backgroundSplit">@drawable/hpr</item>

        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/TitleTextStyle</item>
        <item name="background">@drawable/hpr</item>
        <item name="backgroundStacked">@drawable/hpr</item>
        <item name="backgroundSplit">@drawable/hpr</item>
    </style>

    <!-- action bar title text -->
    <style name="TitleTextStyle"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text</item>
    </style>

    <!-- action bar tab text -->
    <style name="TabTextStyle"
        parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/actionbar_text</item>
    </style>
</resources>
